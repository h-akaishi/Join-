<div class="contents">
  <div class="profile-header" style="
  <% if @user.avatar.present? %>
    background-image: url(<%= @user.avatar.url(:medium) %>)
  <% else %>
    background-image: url(<%= asset_path "site_images/header.png" %>)
  <% end %>
   ">
    <div class="profile-center-box center-block">
      <div class="row">
        <% if @user.avatar.blank? %>
            <%= image_tag('site_images/no_image_s.jpeg', class: 'mypage-user-img center-block') %>
          <% else %>
            <%= image_tag(@user.avatar.url(:user_icon), class: 'mypage-user-img center-block') %>
          <% end %>
      </div>
      <div class="row profile-info">
        <div class="row user-name">
          <%= @user.user_name %>
        </div>
        <div class="row profile-text">
          <%= @user.affiliation %>
        </div>
      </div>
    </div>
  </div>
</div>
<% if current_user.id == @user.id  %>
<div class="my-container">
  <div class="left-contents col-md-8">
    <p>自己紹介</p>
    <%= simple_format(@user.introduction) %>
  </div>
  <div class="right-contents col-md-4">
  </div>
</div>
<% else %>
<div class="user-container">
<%= simple_format(@user.introduction) %>
</div>
<% end %>