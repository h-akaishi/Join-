<div class="container" >
  <div class="jumbotron">
    <h2>プロフィール編集</h2>

    <%= form_for(current_user, html: {class: 'form-horizontal'}) do |f| %>
      <div class="field">
        <%= f.label 'プロフィール画像'%><br />
        <%= f.file_field :avatar, class: "form-control", placeholder: "画像アップロード" %>
      </div>
      <div class="field">
        <%= f.label '所属/職種' %><br />
        <%= f.text_field :affiliation, class: "form-control intro-erea" %>
      </div>
      <div class="field">
        <%= f.label '紹介文' %><br />
        <%= f.text_area :introduction, class: "form-control intro-erea", rows: "5" %>
      </div>

      <div class="actions">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>